<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kenyaemr.kp.program" class="org.openmrs.module.kenyacore.program.ProgramDescriptor">
		<property name="targetUuid" value="7447305a-18a7-11e9-ab14-d663bd873d93" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kenyaemr.calculation.library.kp.EligibleForKPProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kenyaemr.kp.form.kpClientEnrollment" />
		<property name="defaultCompletionForm" ref="kenyaemr.kp.form.completion" />

		<property name="visitForms" >
			<set>
				<ref bean="kenyaemr.common.form.tbScreening" />
				<!--<ref bean="kenyaemr.ipt.form.followup" />
				<ref bean="kenyaemr.common.form.geneXpert" />-->
			</set>
		</property>
	
		<property name="reports">
			<set>

			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kenyaemr:program/hiv/hivEnrollmentSummary" />
				<entry key="care-panel" value="kenyaemr:program/hiv/hivCarePanel" />
				<entry key="completion-summary" value="kenyaemr:program/hiv/hivCompletionSummary" />
			</map>
		</property>
		<property name="order" value="300" />
	</bean>

